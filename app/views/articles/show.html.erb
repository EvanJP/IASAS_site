<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-content">
                <p>
                    <strong> Title: </strong>
                    <%= @article.title %>
                </p>
                <p>
                    <strong>Text: </strong>
                    <%= @article.text %>
                </p>
                <%= link_to 'Back', articles_path %>
            </div>
            <div class="card-action">
                <%= link_to 'Edit', edit_article_path(@article) %>
            </div>
        </div>
    </div>
</div>