<% provide(:title, "Profiles")%>
<div class="container">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s2"><a href="#tas">TAS</a></li>
                <li class="tab col s2"><a href="#ism">ISM</a></li>
                <li class="tab col s2"><a href="#iskl">ISKL</a></li>
                <li class="tab col s2"><a href="#sas">SAS</a></li>
