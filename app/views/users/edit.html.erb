    <% provide(:title, "Edit Profile")%>
        <%= form_for current_user, :html => {:class => 'col s12'}  do |f| %>
            <div class="row">
                <div class="input-field col s12 m8 l8">
                    <%= fields_for(@user_events) do |ue| %>
                        <%= collection_select(:events, :id, @all_events, :id, :event, {}, 
                                             {:multiple => true}) %>
                </div>
                <div class="section">
                    <div class="col s12 m4 l4">
                        <div class="card">
                            <div class="card-image">
                                <%= image_tag current_user.image_url %>
                            </div>
                            <div class="card-content">
                                <span class="card-title">Preview</span>
                                <p>Name: <%= current_user.name %></p>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
                <%= f.submit "Save changes", class: "btn waves-effect waves-light"%>
            <% end %>
            </div>
