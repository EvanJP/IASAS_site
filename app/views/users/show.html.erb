<% provide(:title, "Profile")%>
<div class="container">
    <div class="row">
        <div class="col s12 l4">
            <div class="card">
                <div class="card-image">
                    <%= image_tag current_user.avatar.url(:thumbnail) %>
                </div>
                <div class="card-content">
                    <span class="card-title">Profile Picture</span>
                </div>
            </div>
        </div>
        <div class="col s12 l8">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">User Profile</span>
                    <% if current_user %>
                        <p> Name:
                            <%= current_user.name %>
                        </p>
                        <p> Gender: 
                            <%= current_user.gender %>
                        </p>
                         <p> Email:
                            <%= current_user.email %>
                        </p>
                        <p> School:
                            <%= current_user.school %>
                        </p>
                        <% if current_user.perms != nil %>
                        <% if current_user.perms.strip == 'athlete' %>
                        <p> Events:    
                            <% if current_user.events != nil %>
                            <% currentuser_events = current_user.events %>
                            <% temp = currentuser_events.split(',') %>
                            <% temp.each do |event| %>
                            <p> - <%= event %> </p>
                            <% end %>
                            <% end %>
                        </p>
                        <% end %>
                        <% end %>
                        <% else %>
                            <p> Please sign in </p>
                        <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
 <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
     <%= link_to edit_user_path(current_user), class: "btn-floating btn-large red" do %> 
        <i class="large material-icons">mode_edit</i>
     <% end %>
</div>